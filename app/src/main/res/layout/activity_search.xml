<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="grocerylist.india.com.materialdesign.activity.SearchActivity">

    <android.support.v7.widget.SearchView
        android:id="@+id/search_products"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:imeOptions="actionSearch"
        android:queryHint="Enter product you want to search"></android.support.v7.widget.SearchView>

    <FrameLayout
        android:id="@+id/product_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:layout_below="@id/search_products" />

</RelativeLayout>
